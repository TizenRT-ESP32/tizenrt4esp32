#define _LIBCPP_EXPERIMENTAL_UTILITY

/*
    experimental/utility synopsis

// C++1y

#include <utility>

namespace std {
namespace experimental {
inline namespace fundamentals_v1 {

  3.1.2, erased-type placeholder
  struct erased_type { };

} // namespace fundamentals_v1
} // namespace experimental
} // namespace std

 */

